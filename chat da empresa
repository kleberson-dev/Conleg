                'Qual √© o endere√ßo da empresa?': 'Nossa loja est√° localizada na Rua Exemplo, 123, Centro.',
                'Por onde posso entrar em contato?': 'Voc√™ pode nos contatar pelo telefone (XX) 1234-5678 ou pelo email contato@empresa.com.',
                'Quais s√£o os servi√ßos dispon√≠veis?': 'Oferecemos uma variedade de servi√ßos, incluindo suporte t√©cnico e consultoria.',
                'Fale Conosco!': 'Voc√™ solicitou um atendente. Por favor, aguarde enquanto transferimos voc√™ para um de nossos funcion√°rios.'
            };
            // Objeto com as respostas autom√°ticas para cada t√≥pico

            const response = responses[topic];
            // Obt√©m a resposta correspondente ao t√≥pico selecionado

            appendMessage('user', topic);
            // Adiciona a mensagem do usu√°rio ao chat
            showTypingIndicator();
            // Mostra o indicador de "Digitando..."

            setTimeout(() => {
                hideTypingIndicator();
                // Esconde o indicador de "Digitando..."
                appendMessage('bot', response);
                // Adiciona a mensagem do bot ao chat
            }, 2000);
            // Simula um atraso de 2 segundos para a resposta do bot
        }

        // Fun√ß√£o para adicionar uma mensagem ao chat
        function appendMessage(sender, message) {
            const messageElement = document.createElement('div');
            // Cria um elemento div para a mensagem
            messageElement.classList.add('message', sender);
            // Adiciona as classes "message" e o tipo (user ou bot)
            messageElement.textContent = message;
            // Define o texto da mensagem
            messagesContainer.appendChild(messageElement);
            // Adiciona a mensagem ao cont√™iner de mensagens
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            // Rola para o final do cont√™iner para exibir a mensagem mais recente
        }

        // Fun√ß√£o para mostrar o indicador de "Digitando..."
        function showTypingIndicator() {
            typingIndicator.style.display = 'block';
        }

        // Fun√ß√£o para esconder o indicador de "Digitando..."
        function hideTypingIndicator() {
            typingIndicator.style.display = 'none';
        }

        // Fun√ß√£o para enviar uma mensagem manualmente
        function sendMessage() {
            const input = document.getElementById('chat-input-text');
            // Obt√©m o campo de entrada onde o usu√°rio digita a mensagem
            const userMessage = input.value.trim();
            // Obt√©m o valor da mensagem, removendo espa√ßos extras no in√≠cio e no fim
            const messagesContainer = document.getElementById('chat-messages');
            // Obt√©m o cont√™iner onde as mensagens s√£o exibidas

            if (userMessage) {
                // Verifica se o campo de entrada n√£o est√° vazio
                const topics = [
                    // Define um array com alguns t√≥picos v√°lidos
                    'Hor√°rio de Funcionamento',
                    'Endere√ßo',
                    'Contato',
                    'Servi√ßos',
                    'Fale conosco'
                ];

                // Exibe a mensagem do usu√°rio no chat
                appendMessage('user', userMessage);
                // Chama a fun√ß√£o appendMessage para adicionar a mensagem do usu√°rio ao chat

                // Se a mensagem n√£o corresponder a nenhum dos t√≥picos, envia uma resposta padr√£o
                if (!topics.includes(userMessage)) {
                    // Verifica se a mensagem do usu√°rio est√° na lista de t√≥picos
                    const suggestionMessage = "DESCULPE-ME! N√ÉO CONSEGUI ENTENDER SUA D√öVIDA. VAMOS ENCAMINH√Å-LO PARA UM DE NOSSOS ATENDENTES!";
                    // Mensagem de sugest√£o para o usu√°rio
                    setTimeout(() => {
                        // Usa um timeout para simular o tempo de resposta do bot
                        appendMessage('bot', suggestionMessage, true);
                        // Chama a fun√ß√£o appendMessage para exibir a sugest√£o, marcando-a como mensagem de aten√ß√£o
                    }, 700);
                    // Aguarda 700ms antes de mostrar a resposta do bot
                }

                input.value = '';
                // Limpa o campo de entrada para que o usu√°rio possa digitar outra mensagem
            }
        }

        function appendMessage(sender, message, isAttention = false) {
            const messageElement = document.createElement('div');
            // Cria um novo elemento 'div' para a mensagem
            messageElement.classList.add('message', sender);
            // Adiciona as classes 'message' e 'sender' (pode ser 'user' ou 'bot')

            // Se for uma mensagem de aten√ß√£o, adiciona a classe 'attention'
            if (isAttention) {
                messageElement.classList.add('attention');
                // Aplica o estilo com a fonte menor
            }

            // Cria um novo elemento para a hora
            const timeElement = document.createElement('span');
            timeElement.classList.add('time'); // Classe para o estilo da hora
            timeElement.textContent = getCurrentTime(); // Define a hora atual

            // Cria um elemento para o conte√∫do da mensagem
            const messageContent = document.createElement('span');

            messageElement.textContent = message;
            // Define o conte√∫do de texto da mensagem
            // Adiciona a hora e o conte√∫do da mensagem ao 'messageElement'
            messageElement.appendChild(timeElement);
            messageElement.appendChild(messageContent);
            // Adiciona a mensagem ao cont√™iner de mensagens
            messagesContainer.appendChild(messageElement);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            // Rola para a √∫ltima mensagem para garantir que a mais recente esteja vis√≠vel
        }

        document.getElementById('chat-input-text').addEventListener('keypress', function (e) {
            // Seleciona o campo de entrada de texto (com id 'chat-input-text')
            // e adiciona um ouvinte de evento para o evento 'keypress'.
            // Esse ouvinte √© ativado toda vez que uma tecla √© pressionada dentro do campo de texto.

            if (e.key === 'Enter') {
                // Verifica se a tecla pressionada foi a tecla 'Enter'.
                // Se a tecla pressionada for 'Enter', o c√≥digo dentro do bloco 'if' ser√° executado.

                sendMessage();
                // Chama a fun√ß√£o 'sendMessage()', que envia a mensagem digitada pelo usu√°rio.

                e.preventDefault();
                // Impede o comportamento padr√£o do 'Enter', que seria adicionar uma quebra de linha no campo de texto.
                // Isso faz com que o 'Enter' seja usado apenas para enviar a mensagem e n√£o para criar uma nova linha.
            }
        });
    </script>
