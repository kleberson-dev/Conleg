        function getCurrentTime() {
            let now = new Date();
            let hours = now.getHours();
            let minutes = now.getMinutes();

            // Adiciona zero √† esquerda se for menor que 10
            hours = hours < 10 ? '0' + hours : hours;
            minutes = minutes < 10 ? '0' + minutes : minutes;

            return hours + ':' + minutes;
        }

        function toggleChat() {
            // Fun√ß√£o para alternar a exibi√ß√£o do chat
            const chatContainer = document.getElementById('chat-container');
            chatContainer.classList.toggle('show');
            // Usado para alternar entre dois estados visuais de um elemento
            const chatIcon = document.querySelector('.chat-icon');

            if (chatContainer.style.display === 'flex') {
                // Se o chat estiver vis√≠vel, esconde-o
                chatContainer.style.display = 'none';
                chatIcon.style.display = 'flex';
            } else {
                // Se o chat estiver escondido, exibe-o
                chatContainer.style.display = 'flex';
            }
        }

